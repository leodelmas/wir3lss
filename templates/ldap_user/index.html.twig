{% trans_default_domain 'app' %}

{% extends 'base.html.twig' %}

{% block title %}{{ 'Users'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'Users'|trans }}</h1>
    <hr>
    <table class="table table-striped table-borderless">
        <thead class="table-dark">
            <tr>
                <th>{{ 'Displayed Name'|trans }}</th>
                <th>{{ 'Email'|trans }}</th>
                <th>{{ 'Phone'|trans }}</th>
                <th>{{ 'Actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.displayedName }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.phone }}</td>
                <td>
                    <a href="{{ path('ldap_user.edit', {'cn': user.cn}) }}" class="btn btn-secondary">{{ 'Edit'|trans }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">{{ 'No result'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('ldap_user.new') }}" class="btn btn-success">{{ 'New'|trans }}</a>
{% endblock %}
