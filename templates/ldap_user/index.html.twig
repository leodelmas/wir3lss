{% trans_default_domain 'app' %}

{% extends 'base.html.twig' %}

{% block title %}
	{{ 'Users'|trans }}
{% endblock %}

{% block body %}
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
		<h1 class="h3 mb-0 text-gray-800">{{ 'Users'|trans }}</h1>
		<a href="{{ path('ldap_user.new') }}" class="btn btn-primary shadow-sm">
			<i class="fa-solid fa-plus text-white-50"></i>
			{{ 'New'|trans }}
		</a>
	</div>
	<div class="card shadow mb-4">
		<div class="card-header py-3">
			<h6 class="m-0 fw-bold text-primary">{{ 'Users'|trans }}</h6>
		</div>
		<div class="card-body">
			<table class="table table-striped table-borderless">
				<thead class="table-dark">
					<tr>
						<th>{{ 'Displayed name'|trans }}</th>
						<th>{{ 'Email'|trans }}</th>
						<th>{{ 'Phone'|trans }}</th>
						<th>{{ 'Actions'|trans }}</th>
					</tr>
				</thead>
				<tbody>
					{% for user in users %}
						<tr>
							<td>{{ user.displayedName }}</td>
							<td>{{ user.email }}</td>
							<td>{{ user.phone }}</td>
							<td class="d-flex">
								<a href="{{ path('ldap_user.edit', {'cn': user.cn}) }}" class="btn btn-secondary btn-circle mr-1">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>
								{{ include('ldap_user/_partials/_delete_form.html.twig') }}
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="4">{{ 'No result'|trans }}</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
{% endblock %}
