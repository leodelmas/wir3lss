{% trans_default_domain 'app' %}

<form method="post" action="{{ path('ldap_user.delete', {'cn': user.cn}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.cn) }}">
    <button class="btn btn-danger btn-sm">{{ 'Delete'|trans }}</button>
</form>
