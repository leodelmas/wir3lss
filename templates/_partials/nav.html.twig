{% trans_default_domain 'app' %}

{% set current_route = app.request.get('_route') %}

<nav class="navbar navbar-expand-lg navbar-light bg-light mb-4">
    <div class="container-fluid">
        <a class="navbar-brand" href="{{ path('log.index') }}">
            <img src="{{ asset('build/images/logo.png') }}" alt="{{ 'Logo'|trans }}">
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link {% if current_route == 'log.index' %}active{% endif %}" href="{{ path('log.index') }}">{{ 'Logs'|trans }}</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {% if current_route == 'ldap_user.index' %}active{% endif %}" href="{{ path('ldap_user.index') }}">{{ 'Users'|trans }}</a>
                </li>
            </ul>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a href="{{ path('logout') }}" class="nav-link">{{ 'Logout'|trans }}</a>
                </li>
            </ul>
        </div>
    </div>
</nav>