{% extends 'base.html.twig' %}

{% block title %}Journeaux{% endblock %}

{% block body %}
<h1>Journeaux</h1>
<form method="get" class="row row-cols-lg-auto g-3 align-items-center">
    <div class="col-12">
        <input type="text" name="search-keyword" class="form-control" value="{{ app.request.query.get('search-keyword') }}" aria-label="Rechercher" placeholder="Mot-clé">
    </div>
    <div class="col-12">
        <a href="{{ path('log_index') }}" class="btn btn-outline-secondary mr-1">Annuler</a>
        <button type="submit" class="btn btn-success">Rechercher</button>
    </div>
</form>
<hr>
<table class="table table-striped table-borderless">
    <thead>
        <tr>
            <th>Date</th>
            <th>Source</th>
            <th>Destination</th>
            <th>Utilisateur</th>
            <th>Resultat</th>
        </tr>
    </thead>
    <tbody>
        {% for log in logs %}
        <tr>
            <td>{{ log.sented|date('d/m/Y H:i') }}</td>
            <td>{{ log.source }}</td>
            <td>{{ log.destination }}</td>
            <td>{{ log.user }}</td>
            <td>{{ log.result }}</td>
        </tr>
        {% else %}
        <tr>
            <td colspan="5">Aucun résultat</td>
        </tr>
        {% endfor %}
    </tbody>
</table>
<div class="pagination">
    {{ knp_pagination_render(logs) }}
</div>
{% endblock %}