{% extends 'base.html.twig' %}

{% block title %}Log index{% endblock %}

{% block body %}
    <h1>Log index</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Sented</th>
                <th>Ip</th>
                <th>Mac</th>
                <th>Result</th>
            </tr>
        </thead>
        <tbody>
        {% for log in logs %}
            <tr>
                <td>{{ log.sented|date('d/m/Y H:i') }}</td>
                <td>{{ log.ip }}</td>
                <td>{{ log.mac }}</td>
                <td>{{ log.result }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
