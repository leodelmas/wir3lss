{% trans_default_domain 'app' %}

{% extends 'base.html.twig' %}

{% block title %}{{ 'Logs'|trans }}{% endblock %}

{% block body %}
<h1>{{ 'Logs'|trans }}</h1>
<form method="get" class="row row-cols-lg-auto g-3 align-items-center">
    <div class="col-12">
        <input type="text" name="search-keyword" class="form-control" value="{{ app.request.query.get('search-keyword') }}" aria-label="{{ 'Search'|trans }}" placeholder="{{ 'Keyword'|trans }}">
    </div>
    <div class="col-12">
        <a href="{{ path('log_index') }}" class="btn btn-outline-secondary mr-1">{{ 'Cancel'|trans }}</a>
        <button type="submit" class="btn btn-success">{{ 'Search'|trans }}</button>
    </div>
</form>
<hr>
<table class="table table-striped table-borderless">
    <thead>
        <tr>
            <th>{{ 'Sented'|trans }}</th>
            <th>{{ 'Source'|trans }}</th>
            <th>{{ 'Destination'|trans }}</th>
            <th>{{ 'User'|trans }}</th>
            <th>{{ 'Result'|trans }}</th>
        </tr>
    </thead>
    <tbody>
        {% for log in logs %}
        <tr>
            <td>{{ log.sented|date('d/m/Y H:i') }}</td>
            <td>{{ log.source }}</td>
            <td>{{ log.destination }}</td>
            <td>{{ log.user }}</td>
            <td>{{ log.result }}</td>
        </tr>
        {% else %}
        <tr>
            <td colspan="5">{{ 'No result'|trans }}</td>
        </tr>
        {% endfor %}
    </tbody>
</table>
<div class="pagination">
    {{ knp_pagination_render(logs) }}
</div>
{% endblock %}